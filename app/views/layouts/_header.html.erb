<header class="sticky w-full top-0 z-50 bg-white py-4 px-6 flex items-center">
  <% unless current_page?(root_url) %>
    <%= link_to :back, 
        class: "flex items-center text-indigo-600 hover:text-indigo-800 transition-colors" do %>
      <i class="material-icons mr-2">arrow_back</i>
      <span>Назад</span>
    <% end %>
  <% end %>
  
  <!-- Дополнительные элементы в хедере -->
  <div class="mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-gray-900">
      Trash Can
      <span class="text-gray-600 text-sm">for <%= @current_user.full_name %></span>
    </h1>

    <nav class="mt-4">
      <ul class="flex space-x-4">
        <li><%= link_to 'Home', root_path, class: 'text-blue-600 hover:underline' %></li>
        <li><%= link_to 'Settings', '#settings_path', class: 'text-blue-600 hover:underline' %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" }, class: 'text-red-600 hover:underline' %></li>
      </ul>
    </nav>
  </div>
</header>